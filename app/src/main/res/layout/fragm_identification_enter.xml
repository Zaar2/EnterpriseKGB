<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.identification.IdentificationEnter_fragment"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_fragment"
        android:layout_marginEnd="@dimen/margin_fragment"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <EditText android:id="@+id/et_idEnterprise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/et_identification_hint_id"
                style="@style/editText_identification"
                android:layout_weight="1"
                android:inputType="textVisiblePassword"
                android:autofillHints="password"
                />
            <Button android:id="@+id/btn_identification_newEnterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                style="@style/button_small"
                android:text="@string/btn_label_new"
                android:visibility="invisible"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <EditText android:id="@+id/et_usrLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/et_identification_hint_login"
                style="@style/editText_identification"
                android:layout_weight="1"
                android:inputType="textVisiblePassword"
                android:autofillHints="username"
                />
            <Button android:id="@+id/btn_identification_newUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/button_small"
                android:text="@string/btn_label_new"
                android:minHeight="0dp"
                android:visibility="invisible"
                />
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_usrPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/et_identification_hint_password"
                android:inputType="textPassword"
                style="@style/editText_identification"
                android:background="@color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="100"
            >
            <Button android:id="@+id/btn_identificationEnter_ok"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                style="@style/button"
                android:text="@string/btn_label_ok"
                />
            <Button android:id="@+id/btn_identificationEnter_back"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                style="@style/button"
                android:text="@string/btn_label_back"
            />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/button_shops_mainMenu"
            android:text="@string/btn_label_restoring_access"
            android:textSize="@dimen/size_of_text_in_panel"
            android:visibility="gone"
            />
        <TextView android:id="@+id/tv_identification_explanation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textView_smallText"
            android:text="@string/tv_identification_start_explanation"
            />
        <TextView android:id="@+id/tv_identification_description_process_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textView_smallText"
            android:visibility="visible"
            />
    </LinearLayout>
</LinearLayout>